{% extends 'baseAdmin.html.twig' %}

{% block title %} Utilisateurs {% endblock %}

{% block body %}

    <section class="container">
        <h1 class="h1 text-primary">Les utilisateurs</h1>

        <div class="d-flex justify-content-around wrapped">
            {% for user in users %}
                <div class="card" style="width: 20rem;">
                    <div class="card-body">
                        <h5 class="card-title text-primary">{{ user.email }}</h5>
                        <p class="card-text">ID n°{{ user.id }}</p>
                        <p class="card-text">Roles : </p>
                        <ul>
                            {% for role in user.roles %}
                                <li>{{ role }} </li>
                            {% endfor %}
                        </ul>
                        <a href="{{ path('admin_update_user', {id: user.id}) }}"
                           class="btn btn-warning mt-1">Mettre à jour</a>
                        <a href="{{ path('admin_delete_user', {id: user.id}) }}"
                           class="btn btn-danger mt-1">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('admin_create_user') }}" class="btn btn-primary mt-2 mb-2">Ajouter un utilisateur</a>

    </section>

{% endblock %}