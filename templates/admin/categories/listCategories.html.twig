{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des catégories {% endblock %}

{% block body %}

    <section class="container">
        <h1 class="h1 text-primary">Catégories</h1>
        <div class="d-flex justify-content-around">
            {% for category in categories %}
                <div class="card" style="width: 20rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.title }}</h5>
                        <a href="{{ path('admin_update_category', {id: category.id}) }}" class="btn btn-warning mt-1">Mettre à jour</a>
                        <a href="{{ path('admin_delete_category', {id: category.id}) }}" class="btn btn-danger mt-1">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('admin_create_category') }}" class="btn btn-primary mt-2 mb-2">Ajouter une catégorie</a>

    </section>


{% endblock %}