{% extends 'base.html.twig' %}

{% block title %}{{ recipe.title }} {% endblock %}

{% block body %}

    <section class="container">
        <h1 class="h1 text-primary">{{ recipe.title }}</h1>
        <div class="d-flex justify-content-center">
                <div class="card" style="width: 40rem;">
                    <img src="{{ asset('assets/uploads/' ~ recipe.image)}}" class="card-img-top" alt="{{ recipe.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ recipe.title }}</h5>
                        <p class="card-text">Instructions : {{ recipe.instructions }}</p>
                        <p class="card-text">Créée le : {{ recipe.createdAt | date('d-m-Y') }}</p>
                        <p class="card-text">Catégorie : {{ recipe.category.title }}</p>
                    </div>
                </div>

        </div>

        <a href="{{ path('public_recipes_list') }}" class="btn btn-primary mt-2 mb-2">Retourner à la liste des recettes</a>

    </section>


{% endblock %}