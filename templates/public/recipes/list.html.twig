{% extends 'base.html.twig' %}

{% block title %} Liste des recettes {% endblock %}

{% block body %}

    <section class="container">
        <h1 class="h1 text-primary">Recipes</h1>
        <div class="d-flex justify-content-around">
            {% for recipe in recipes %}
                <div class="card" style="width: 20rem;">
                    <img src="{{ asset('assets/uploads/' ~ recipe.image)}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ recipe.title }}</h5>
                        <p class="card-text">Instructions : {{ recipe.instructions }}</p>
                        <p class="card-text">Créée le : {{ recipe.createdAt | date('d-m-Y') }}</p>
                        <a href="{{ path('public_recipe_show', {id: recipe.id}) }}" class="btn btn-primary mt-1">Voir la recette</a>
                        <a href="{{ path('public_categories_list') }}" class="btn btn-success mt-1">{{recipe.category.title}}</a>
                    </div>
                </div>
            {% endfor %}
        </div>


    </section>


{% endblock %}